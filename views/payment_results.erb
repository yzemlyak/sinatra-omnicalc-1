<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @apr_num.to_fs(:percentage, {:precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt
  <dd>
    <%= @loan_term %>
  </dd>

  <dt>
    Principal
  </dt
  <dd>
    <%= @present_value.to_fs(:currency) %>
  </dd>

<dt>
    Payment
  </dt
  <dd>
    <%= @the_result.to_fs(:currency) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
